// fuentes
@font-face
	font-family 'iconFont'
	src	url('../fonts/iconFont.eot')
	src	url('../fonts/iconFont.eot?#iefix') format('embedded-opentype'),
		url('../fonts/iconFont.ttf') format('truetype'),
		url('../fonts/iconFont.woff') format('woff'),
		url('../fonts/iconFont.svg#iconFont') format('svg')
	font-weight normal
	font-style normal

// variables
blanco		= #FDFDFD
fontSize	= 16px
negro		= #101010

// mixins
animation()
	-webkit-animation arguments
	-moz-animation arguments
	-o-animation arguments
	animation arguments
border-radius()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	border-radius arguments
box-sizing()
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
transform()
	-webkit-transform arguments
	-moz-transform arguments
	-ms-transform arguments
	-o-transform arguments
	transform arguments
transition()
	-webkit-transition arguments
	-moz-transition arguments
	-ms-transition arguments
	-o-transition arguments
	transition arguments

// animaciones
@-webkit-keyframes rotar
	0%
		transform(rotate(0deg))
	100%
		transform(rotate(360deg))
@-moz-keyframes rotar
	0%
		transform(rotate(0deg))
	100%
		transform(rotate(360deg))
@-o-keyframes rotar
	0%
		transform(rotate(0deg))
	100%
		transform(rotate(360deg))
@keyframes rotar
	0%
		transform(rotate(0deg))
	100%
		transform(rotate(360deg))

// etiquetas
body
	font-size fontSize
button:focus
	outline 0
h1
	font-size 1.5em
	line-height 2.5em
	margin 0
	padding 0
	text-align center
header
	background negro
	color blanco
	left 0
	position fixed
	right 0
	top 0
	.icon-config
		background blanco
		border 0
		border-radius(1em)
		color negro
		cursor pointer
		font-size 1.5em
		padding .25em
		position absolute
		right .5em
		top .5em
		&:hover
			animation(rotar 2.25s linear 0s infinite)
// ids
#config
	background blanco
	bottom 10%
	color negro
	left 30%
	position fixed
	right 30%
	top 10%
	z-index 3
	h2
		margin 0
		padding .5em
		text-align center
	label
		box-sizing()
		display block
		font-size 0
		width 100%
		select
		span
			box-sizing()
			display inline-block
			font-size fontSize
			margin .25em 1%
			padding .125em
			width 68%
		span
			width 28%
	.boton
		bottom .25em
		left 0
		position absolute
		right 0
	.icon-close
		background negro
		border 0
		border-radius(1em)
		color blanco
		cursor pointer
		font-size 1.25em
		padding .5em
		position absolute
		right .5em
		top .5em
#shadow
	background rgba(negro,.75)
	bottom 0
	left 0
	position fixed
	right 0
	top 0
	z-index 2

// clases
[class^="icon-"]
[class*=" icon-"]
	font-family 'iconFont'
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	font-style normal
	font-variant normal
	font-weight normal
	line-height 1
	speak none
	text-transform none
.boton
	background negro
	border 0
	border-radius(.25em)
	color blanco
	display block
	line-height 2em
	margin 0 auto
	text-transform uppercase
	width 70%
.icon-close:before
	content "\e601"
.icon-config:before
	content "\e600"
.icon-github:before
	content "\e602"
.icon-twitter:before
	content "\e603"
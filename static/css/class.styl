[class^="btn"]
[class*=" btn"]
	background negro
	border 0
	color blanco
	display block
	line-height 2em
	margin 0 auto
	transition all .25s ease
	width 70%
[class^="icon-"]
[class*=" icon-"]
	font-family 'iconFont'
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	font-style normal
	font-variant normal
	font-weight normal
	line-height 1
	speak none
	text-transform none
.btnExito
	background verde
	&:hover
		box-shadow 0 0 .25em verde
.calculos
	background blanco
	box-sizing border-box
	fixed bottom 40px left 100% right -100% top 60px
	font-size 0
	margin 0
	overflow-y auto
	padding 0 .25rem
	transition all .25s ease
	z-index 2
	&.activo
		fixed left right
	button
	input
		font-size 1rem
.cerrarNota
	background rojo
	border 0
	color blanco
	font-size .75em
	absolute right -.5em top -.5em
	&:active
		font-size fs
		right -.75em
		top -.75em
		absolute right -.75em top -.75em
.completo
.mitad
	background blanco
	border 1px solid gris
	box-sizing border-box
	color negro
	margin .5em 1%
	padding .5em .25em
	text-align center
.completo
	display block
	width 98%
.icon-close
	&:before
		content "\e601"
.icon-config
	background blanco
	border 0
	border-radius 1em 
	color negro
	cursor pointer
	font-size 1.5em
	padding .25em
	position absolute
	right .5em
	top .5em
	&:before
		content "\e600"
	&:hover
		animation rotar 2.25s linear 0s infinite
.icon-github
	left .5em
	text-decoration none
	&:active
		color #4183C4
	&:before
		content "\e602"
.icon-twitter:before
	content "\e603"
	vertical-align middle
.mitad
	display inline-block
	width 48%
.nota
	background amarillo
	box-sizing border-box
	color negro
	display block
	font-size 14px
	line-height 2em
	margin .5em 10%
	padding .5em .25em
	position relative
	text-align center
	width 80%
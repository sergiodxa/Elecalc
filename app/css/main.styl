// imports
@import 'nib'

// fuentes
@import url('http://fonts.googleapis.com/css?family=Droid+Sans')
@font-face
	font-family 'iconFont'
	src	url('../fonts/iconFont.eot')
	src	url('../fonts/iconFont.eot?#iefix') format('embedded-opentype'),
		url('../fonts/iconFont.ttf') format('truetype'),
		url('../fonts/iconFont.woff') format('woff'),
		url('../fonts/iconFont.svg#iconFont') format('svg')
	font-weight normal
	font-style normal

// variables
amarillo		= #FBAB3B
blanco			= #FDFDFD
fs				= 16px
gris			= #C0C0C0
negro			= #101010
rojo			= #DD0000
vendor-prefixes	= o ms moz webkit official
verde			= #00AA00
violeta			= #7B68EE

// etiquetas
a
	color #1E90FF
	text-decoration none
	&:visited
		color violeta
	&:hover
		text-decoration underline
	&:active
		color violeta
		text-decoration underline
article
	background blanco
	border-bottom 1px solid gris
	box-sizing border-box
	margin 0
	overflow hidden
	padding 0 .25rem
	vertical-align top
	width 100%
	h2
		cursor pointer
		font-size 1.25rem
		line-height 40px
		margin 0
		padding 0
		&:before
			content "\e604"
			font-family 'iconFont'
			font-size .75em
			padding 0 .5em 0 0
body
	font-family 'Droid Sans', sans-serif
	font-size fs
button:focus
	outline 0
footer
	background negro
	bottom 0
	color blanco
	left 0
	position fixed
	right 0
	text-align center
h1
	color #f17432
	font-size 1.5em
	font-style italic
	line-height 2.5em
	margin 0
	padding 0
	text-align center
h3
	cursor pointer
	font-size 1.25rem
	line-height 40px
	margin 0
	padding 0
	&:before
		content "\e605"
		font-family 'iconFont'
		font-size .75em
		padding 0 .5em 0 0
header
	background negro
	color blanco
	left 0
	position fixed
	right 0
	top 0
input:-ms-input-placeholder
	color negro
input::-webkit-input-placeholder
	color negro
input:-moz-placeholder
	color negro
input::-moz-placeholder
	color negro
input[type="radio"]
	display none
label
	border-bottom 1px solid gris
	box-sizing border-box
	cursor pointer
	display block
	font-size 0
	margin 0
	padding .5rem 0
	width 100%
	&.activo
		background amarillo
p
	line-height 2.5em
	margin 0
	padding 0
	a
		color #00ACED
section
	box-sizing border-box
	font-size 0
	overflow-y auto
	fixed bottom 40px left right top 60px
span
	display inline-block
	font-size fs
	padding .25em
::-webkit-scrollbar
	display none

// ids
#btnGuardar
	margin .5em auto .25em
#cerrarConfig
.cerrarNota
.icon-github
	border-radius 50%
	cursor pointer
	padding .5em
	transition all .125s ease
#cerrarConfig
.icon-github
	background blanco
	border 1px solid gris
	border-radius 50%
	color negro
	cursor pointer
	font-size 1.25em
	padding .5em
	position absolute
	top .5em
	transition all .125s ease
#cerrarConfig
	right .5em
	&:active
		color rojo
#config
	background blanco
	color negro
	display none
	fixed bottom 10% left 30% right 30% top 10%
	opacity 0
	overflow-y auto
	transition .5s all
	z-index 3
	&.activo
		display block
		opacity 1
	h2
		border-bottom 1px solid gris
		color negro
		line-height 62px
		margin 0
		padding 0
		text-align center
#navegadorAntiguo
	background blanco
	color negro
	display none
	fixed 0
#shadow
	background rgba(negro,.75)
	display none
	opacity 0
	position fixed
	fixed bottom left right top
	transition .5s all
	z-index 2
	&.activo
		display block
		opacity 1

// clases
[class^="btn"]
[class*=" btn"]
	background negro
	border 0
	color blanco
	display block
	line-height 2em
	margin 0 auto
	transition all .25s ease
	width 70%
[class^="icon-"]
[class*=" icon-"]
	font-family 'iconFont'
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	font-style normal
	font-variant normal
	font-weight normal
	line-height 1
	speak none
	text-transform none
.btnExito
	background verde
	&:hover
		box-shadow 0 0 .25em verde
.calculos
	background blanco
	box-sizing border-box
	fixed bottom 40px left 100% right -100% top 60px
	font-size 0
	margin 0
	overflow-y auto
	padding 0 .25rem
	transition all .25s ease
	z-index 2
	&.activo
		fixed left right
	button
	input
		font-size 1rem
.cerrarNota
	background rojo
	border 0
	color blanco
	font-size .75em
	absolute right -.5em top -.5em
	&:active
		font-size fs
		right -.75em
		top -.75em
		absolute right -.75em top -.75em
.completo
.mitad
	background blanco
	border 1px solid gris
	box-sizing border-box
	color negro
	margin .5em 1%
	padding .5em .25em
	text-align center
.completo
	display block
	width 98%
.icon-close
	&:before
		content "\e601"
.icon-config
	background blanco
	border 0
	border-radius 1em 
	color negro
	cursor pointer
	font-size 1.5em
	padding .25em
	position absolute
	right .5em
	top .5em
	&:before
		content "\e600"
	&:hover
		animation rotar 2.25s linear 0s infinite
.icon-github
	left .5em
	text-decoration none
	&:active
		color #4183C4
	&:before
		content "\e602"
.icon-twitter:before
	content "\e603"
	vertical-align middle
.mitad
	display inline-block
	width 48%
.nota
	background amarillo
	box-sizing border-box
	color negro
	display block
	font-size 14px
	line-height 2em
	margin .5em 10%
	padding .5em .25em
	position relative
	text-align center
	width 80%

// mobile
@media screen and (max-width: 640px)
	// ids
	#config
		fixed bottom 2.5% left 2.5% right 2.5% top 2.5%

// animaciones
@keyframes rotar
	0%
		transform(rotate(0deg))
	100%
		transform(rotate(360deg))
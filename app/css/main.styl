// imports
@import 'mixinSDX.styl'

// fuentes
@import url('http://fonts.googleapis.com/css?family=Droid+Sans')
@font-face
	font-family 'iconFont'
	src	url('../fonts/iconFont.eot')
	src	url('../fonts/iconFont.eot?#iefix') format('embedded-opentype'),
		url('../fonts/iconFont.ttf') format('truetype'),
		url('../fonts/iconFont.woff') format('woff'),
		url('../fonts/iconFont.svg#iconFont') format('svg')
	font-weight normal
	font-style normal

// variables
amarillo	= #FBAB3B
azul		= #1E90FF
blanco		= #FDFDFD
fontFamily	= 'Droid Sans', sans-serif
fontSize	= 16px
gris		= #C0C0C0
naranja		= #f17432
negro		= #101010
rojo		= #DD0000
verde		= #00AA00
violeta		= #7B68EE

// mixins

// etiquetas
a
	color azul
	text-decoration none
	&:visited
		color violeta
	&:hover
		text-decoration underline
	&:active
		color violeta
		text-decoration underline
body
	font-family fontFamily
	font-size fontSize
button:focus
	outline 0
footer
	background negro
	bottom 0
	color blanco
	left 0
	position fixed
	right 0
	text-align center
	p
		line-height 2.5em
		margin 0
		padding 0
		a
			color #00ACED !important
h1
	color naranja
	font-size 1.5em
	font-style italic
	line-height 2.5em
	margin 0
	padding 0
	text-align center
header
	background negro
	color blanco
	left 0
	position fixed
	right 0
	top 0
	.icon-config
		background blanco
		border 0
		borderRadius(1em)
		color negro
		cursor pointer
		font-size 1.5em
		padding .25em
		position absolute
		right .5em
		top .5em
		&:hover
			animation(rotar 2.25s linear 0s infinite)
input:-ms-input-placeholder
	color negro
input::-webkit-input-placeholder
	color negro
input:-moz-placeholder
	color negro
input::-moz-placeholder
	color negro
section
	bottom fontSize*2.5
	boxSizing()
	font-size 0
	left 0
	overflow-y auto
	position fixed
	right 0
	top fontSize*3.75
	article
		background blanco
		border-bottom 1px solid gris
		boxSizing()
		margin 0
		overflow hidden
		padding 0 .25rem
		vertical-align top
		width 100%
		h2
			cursor pointer
			font-size 1.25rem
			line-height 40px
			margin 0
			padding 0
			&:before
				content "\e604"
				font-family 'iconFont'
				font-size .75em
				padding 0 .5em 0 0
::-webkit-scrollbar
	display none

// ids
#config
	background blanco
	bottom 10%
	color negro
	left 30%
	overflow-y auto
	position fixed
	right 30%
	top 10%
	z-index 3
	h2
		border-bottom 1px solid gris
		color negro
		line-height 62px
		margin 0
		padding 0
		text-align center
	label
		border-bottom 1px solid gris
		boxSizing()
		cursor pointer
		display block
		font-size 0
		margin 0
		padding .5rem 0
		width 100%
		input
			display none
		span
			display inline-block
			font-size fontSize
			padding .25em
		&.activo
			background amarillo
	.boton
		margin .5em auto .25em
	.icon-close
	.icon-github
		background blanco
		border 1px solid gris
		borderRadius(50%)
		color negro
		cursor pointer
		font-size 1.25em
		padding .5em
		position absolute
		transition(all .125s ease)
		top .5em
	.icon-close
		right .5em
		&:active
			color rojo
	.icon-github
		left .5em
		text-decoration none
		&:active
			color #4183C4
#navegadorAntiguo
	background blanco
	color negro
	display none
	fixed(0,0,0,0)
#shadow
	background rgba(negro,.75)
	bottom 0
	left 0
	position fixed
	right 0
	top 0
	z-index 2

// clases
[class^="icon-"]
[class*=" icon-"]
	font-family 'iconFont'
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	font-style normal
	font-variant normal
	font-weight normal
	line-height 1
	speak none
	text-transform none
.boton
	background negro
	border 0
	color blanco
	display block
	line-height 2em
	margin 0 auto
	transition(all .25s ease)
	width 70%
	&.btnAdvertencia
		background amarillo
		color negro
		&:hover
			boxShadow(0 0 .25em amarillo)
	&.btnExito
		background verde
		&:hover
			boxShadow(0 0 .25em verde)
	&.btnPeligro
		background rojo
		&:hover
			boxShadow(0 0 .25em rojo)
.calculos
	background blanco
	boxSizing()
	fixed(fontSize*2.5,100%,-100%,fontSize*3.75)
	font-size 0
	margin 0
	overflow-y auto
	padding 0 .25rem
	transition(all .25s ease)
	z-index 2
	&.activo
		fixed(fontSize*2.5,0,0,fontSize*3.75)
	button
	input
		font-size 1rem
	h3
		cursor pointer
		font-size 1.25rem
		line-height 40px
		margin 0
		padding 0
		&:before
			content "\e605"
			font-family 'iconFont'
			font-size .75em
			padding 0 .5em 0 0
.completo
.mitad
	background blanco
	border 1px solid gris
	boxSizing()
	color negro
	margin .5em 1%
	padding .5em .25em
	text-align center
.completo
	display block
	width 98%
.icon-close:before
	content "\e601"
.icon-config:before
	content "\e600"
.icon-github:before
	content "\e602"
.icon-twitter:before
	content "\e603"
	vertical-align middle
.mitad
	display inline-block
	width 48%
.nota
	background amarillo
	boxSizing()
	color negro
	display block
	font-size 14px
	line-height 2em
	margin .5em 10%
	padding .5em .25em
	position relative
	text-align center
	width 80%
	.icon-close
		background rojo
		border 0
		borderRadius(50%)
		color blanco
		cursor pointer
		font-size .75em
		padding .5em
		position absolute
		right -.5em
		top -.5em
		transition(all .125s ease)
		&:active
			font-size fontSize
			right -.75em
			top -.75em

// desktop

// tablet

// mobile
@media screen and (max-width: 640px)
	// etiquetas

	// ids
	#config
		bottom 2.5%
		left 2.5%
		right 2.5%
		top 2.5%

// animaciones
@keyframes rotar
	0%
		transform(rotate(0deg))
	100%
		transform(rotate(360deg))